@model starkdev.spreadrecon.model.Relatorio
@using starkdev.utils

@{
    ViewBag.Titulo = "Terminais Achados";
    ViewBag.TituloPagina = "Terminais Achados";
    ViewBag.AcaoTabela = "Ações";
    ViewBag.NenhumRegistroEncontrado = "Nenhum ciclo existente";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.TituloPagina</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <!-- start accordion -->
                <div class="accordion" id="accordion1" role="tablist" aria-multiselectable="true">
                    <div class="panel">
                        <div id="collapseOne1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                @if (Model.ExibirTerminaisAchados != null)
                                {
                                    <table id="datatable-export" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.ExibirTerminaisAchados.FirstOrDefault().ciclo)</th>
                                                <th>@Html.DisplayNameFor(model => model.ExibirTerminaisAchados.FirstOrDefault().nomeLoja)</th>
                                                <th>@Html.DisplayNameFor(model => model.ExibirTerminaisAchados.FirstOrDefault().total)</th>
                                                <th>@Html.DisplayNameFor(model => model.ExibirTerminaisAchados.FirstOrDefault().nomeStatus)</th>
                                                <th>@ViewBag.AcaoTabela</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.ExibirTerminaisAchados)
                                            {
                                                <tr>
                                                    <th scope="row">@Html.DisplayFor(modelItem => item.ciclo)</th>
                                                    <td>@Html.DisplayFor(modelItem => item.nomeLoja)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.total)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.nomeStatus)</td>
                                                    <td>
                                                        <a href="@Url.Action("TerminaisAchadosPorCiclo", "Relatorio", new { idLoja = item.idLoja, ciclo = item.ciclo })" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end of accordion -->
            </div>
        </div>
    </div>
</div>
