@model starkdev.spreadrecon.model.Loja

@{
    ViewBag.Titulo = "Loja";
    ViewBag.TituloPagina = "Detalhes da loja";

    //Nomes de botões
    ViewBag.Editar = "Editar";
    ViewBag.Voltar = "Voltar";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="form-group">
            <input type="button" value="@ViewBag.Voltar" onclick="location.href='@Url.Action("Index", "Loja")'" class="btn" />
            <input type="button" value="@ViewBag.Editar" onclick="location.href='@Url.Action("Editar", "Loja", new { id = Model.id })'" class="btn btn-primary" />
        </div>
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.TituloPagina</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.nomeLoja)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.nomeLoja)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.numeroCNPJLoja)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.numeroCNPJLoja)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.numeroPDV)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.numeroPDV)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.isAtivo)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.isAtivo)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
